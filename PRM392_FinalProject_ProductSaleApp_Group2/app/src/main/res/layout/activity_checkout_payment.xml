<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F8FB"
    android:fitsSystemWindows="false"
    tools:context=".order.CheckoutPaymentActivity">

    <!-- Header gradient -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient"
        android:paddingTop="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back_header"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Simple stepper indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="42dp"
            android:orientation="horizontal">
            <View android:layout_width="56dp" android:layout_height="6dp" android:background="#FFFFFF" android:alpha="0.9" android:layout_marginEnd="8dp"/>
            <View android:layout_width="56dp" android:layout_height="6dp" android:background="#FFFFFF" android:alpha="0.5" android:layout_marginEnd="8dp"/>
            <View android:layout_width="56dp" android:layout_height="6dp" android:background="#FFFFFF" android:alpha="0.2"/>
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">

            <!-- Cart items card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginTop="-8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_cart_items"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:nestedScrollingEnabled="true"
                    android:overScrollMode="always" />
            </LinearLayout>

            <!-- Shipping address card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_person_24"
                    android:tint="#9AA3AF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Username"
                        android:textColor="#111827"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Billing Address with Edit Icon -->
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Email"
                        android:textColor="#111827"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_input_round"
                        android:padding="12dp">

                        <EditText
                            android:id="@+id/et_billing_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Địa chỉ giao hàng"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:background="@android:color/transparent"
                            android:inputType="textPostalAddress" />

                        <ImageView
                            android:id="@+id/iv_edit_address"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_edit_24"
                            android:tint="#9AA3AF"
                            android:layout_marginStart="8dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Phone with Edit Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_input_round"
                        android:padding="12dp">

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Số điện thoại"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:background="@android:color/transparent"
                            android:inputType="phone" />

                        <ImageView
                            android:id="@+id/iv_edit_phone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_edit_24"
                            android:tint="#9AA3AF"
                            android:layout_marginStart="8dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Voucher card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_local_offer_24"
                    android:tint="#34C759" />

                <TextView
                    android:id="@+id/tv_selected_voucher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Giảm giá"
                    android:textColor="#111827"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_choose_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Chọn"
                    android:background="@drawable/bg_button_outline"
                    android:textColor="#1F2937" />
            </LinearLayout>

            <!-- Order summary card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hóa đơn mua hàng"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng ban đầu"
                            android:textColor="#6B7280" />
                        <TextView
                            android:id="@+id/tv_original_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 ₫"
                            android:textColor="#111827" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Giảm giá"
                            android:textColor="#6B7280" />
                        <TextView
                            android:id="@+id/tv_discount_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0 ₫"
                            android:textColor="#EF4444" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#E5E7EB" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng cộng"
                            android:textStyle="bold"
                            android:textColor="#111827" />
                        <TextView
                            android:id="@+id/tv_final_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 ₫"
                            android:textStyle="bold"
                            android:textColor="#DC2626" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom pay button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#00FFFFFF">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Xác nhận thanh toán"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_gradient" />
    </LinearLayout>

</LinearLayout>